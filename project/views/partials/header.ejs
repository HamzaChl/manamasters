    <script src="https://unpkg.com/@studio-freight/lenis@1.0.34/dist/lenis.min.js"></script>
    <script>
      // scroll
      const lenis = new Lenis();

        lenis.on("scroll", (e) => {});

        function raf(time) {
          lenis.raf(time);
          requestAnimationFrame(raf);
        }

        requestAnimationFrame(raf);
        
        function scrollBehaviorChange() {
          document.documentElement.style.scrollBehavior = "smooth";
            setTimeout(() => {
              document.documentElement.style.scrollBehavior = "auto";
            }, 200);
      };

        // menu
       function menuFunction() {
          if (document.getElementById("mobile-menu").style.display === "block") {
            document.getElementById("mobile-menu").style.display = "none";
          } else {
            document.getElementById("mobile-menu").style.display = "block";
          };
       };

        const media = matchMedia("(min-width:1085px)");

        media.addEventListener("change", () => {
          document.getElementById("mobile-menu").style.display = "none";
        });

        // popup deck individueel
        function OpenDecksIndividueel() {
          document.getElementById("popupdecksIndividueel").style.visibility = "visible";
          document.getElementById("popupdecksIndividueel").style.height = "100vh";
      }
      function buttonClosePopUpIndividueel() {
        document.getElementById("popupdecksIndividueel").style.visibility = "hidden";
          document.getElementById("popupdecksIndividueel").style.height = 0;
      }

      function ClosePopUp() {
        for (let i = 0; i < 10; i++) {
          document.getElementById(`popup${i}`).style.display = "none";
        };
      };
      
      
      document.addEventListener("keydown", function (event) {
        if (event.key === "Escape" || event.key === "Esc") {
          ClosePopUp("popupdecksIndividueel");
        }
      });

      document.addEventListener("keydown", function (event) {
        if (event.key === "Escape" || event.key === "Esc") {
          ClosePopUp();
        }
      });
          
      const openPopup = (id) => {
      const popupCardImg = document.getElementById("popupCardImg");
      const popup = document.getElementById(`popup${id}`);
    
      popup.style.display = "block";
      }

      document.addEventListener("DOMContentLoaded", ( ) => {
        const popupCardImg = document.getElementById("popupCardImg");

        document.querySelectorAll('.card-holder').forEach(element => {
        element.addEventListener("click", function () {
        
          openPopup(element.id);
        });
      });
      })
    </script>

